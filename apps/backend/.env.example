# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info

# API Keys (to be configured)
OPENAI_API_KEY=your_openai_api_key_here
