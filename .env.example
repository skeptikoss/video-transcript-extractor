# Application Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_PATH=./data/app.db

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Notion API
NOTION_API_KEY=secret_your-notion-integration-token-here
NOTION_DATABASE_ID=your-notion-database-id-here

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=524288000  # 500MB in bytes
ALLOWED_FILE_TYPES=video/mp4

# Queue Configuration
REDIS_URL=redis://localhost:6379  # Optional, uses in-memory if not set
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=600000  # 10 minutes in ms

# WebSocket
WS_PORT=3001

# Security
SESSION_SECRET=your-session-secret-here
API_KEY=your-api-key-here  # For simple auth

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# FFmpeg Path (if not in PATH)
# FFMPEG_PATH=/usr/local/bin/ffmpeg
